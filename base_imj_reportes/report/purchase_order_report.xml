<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_purchaseorder_document_imj" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//page/class/h2[1]" position="replace">
            <h2 t-if="o.state == 'draft'">Purchase Order #<span t-field="o.name"/></h2>
        </xpath>
        <xpath expr="//div[hasclass('oe_structure')][2]" position="before">
            <p t-if="o.state in ('draft','sent')">Solicitud de Presupuesto #<span t-field="o.name"/></p>
            <p t-if="o.approval == True">ORDEN DE COMPRA FINAL</p>
            <p t-if="o.approval == False">ORDEN DE COMPRA INICIAL</p>
        </xpath>
    </template>
</odoo>